/* pages/video/index.wxss */

@import "../../../wxParse/wxParse.wxss";
page {
    background: #f4f4f4;
}

.case {
    padding: 10rpx 20rpx;
    margin-bottom: 20rpx;
    background: white;
}

.toolbar view {
    display: inline-block;
}

view {
    white-space: nowrap;
    word-break: break-all;
    word-wrap: break-word;
}

.contain .window {
    display: inline-block;
    width: 100%;
    vertical-align: top;
    box-sizing: border-box;
}

.toolbar {
    border-bottom: 1rpx solid lightgrey;
}

.toolbar .list {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: white;
}

.header .protrait {
    text-align: center;
}

.header .protrait image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 5rpx solid #f4f4f4;
}

.header .username {
    padding: 10rpx 10rpx;
    text-align: center;
    font-size: 50rpx;
    color: white;
}

.intro {
    background: white;
}

.info {}

.info>view {
    margin-top: 25rpx;
    display: inline-block;
    width: 33.33%;
    text-align: center;
    border-left: 1rpx solid gainsboro;
    height: 65rpx;
}

.info>view:first-of-type {
    border: none;
}

.info .title {
    font-size: 30rpx;
    position: relative;
    top: -20rpx;
}

.info .account {
    font-size: 45rpx;
    position: relative;
    top: -20rpx;
}

.interact {
    padding: 0 15rpx;
}

.interact>view {
    display: inline-block;
    margin-right: 60rpx;
    color: dimgray;
}

.menu {
    padding: 0rpx 30rpx;
    background: white;
}

.menu>view {
    height: 90rpx;
    line-height: 90rpx;
}

.menu .list>view {
    display: inline-block;
    vertical-align: baseline;
}


/*LOGO色调BFBFBF*/

.list image {
    position: relative;
    top: 8rpx;
    margin-right: 30rpx;
    width: 35rpx;
    height: 35rpx;
}

.list .text {
    border-bottom: 1rpx solid lightgrey;
    width: 95%;
    font-size: 30rpx;
    color: dimgray;
}

.list:last-of-type .text {
    border: none;
}



/*互动模板*/

.community image,
.tips image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.community .word {
    width: 100%;
}

#myprotrait {
    filter: blur(10px);
    width: 120%;
    position: relative;
    left: -20rpx;
    top: -20rpx;
}

.container {
    padding: 70rpx 50rpx 20rpx;
}

.container>view {
    display: inline-block;
    width: 33.33%;
    vertical-align: middle;
    text-align: center;
    color: white;
    font-size: 30rpx;
}

.container .num {
    font-size: 35rpx;
}

.container .username {
    display: block;
    text-align: center;
    width: 100%;
    text-indent: -0.5em;
}

#copyright {
    text-align: center;
    margin: 10rpx 0;
}