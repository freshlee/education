/* index.wxss */
@import "../../../wxParse/wxParse.wxss";

.body {
    padding-bottom: 80rpx;
}

.case {
    padding: 10rpx 30rpx;
    border-bottom: 2rpx solid #f4f4f4;
    background-color: white;
}

.case .content {
    padding-left: 110rpx;
    box-sizing: border-box;
    width: 680rpx;
    word-break: break-all;
}

.case .content view {
    display: inline-block !important;
}

.case:last-of-type {
    margin: 0;
    box-shadow: none;
}

.header {
    border-bottom: 2rpx solid #f4f4f4;
}

.header>view {
    padding: 20rpx 0;
}

.header .info {
    padding: 0 0 10rpx;
}

.title {
    font-size: 45rpx;
    border-bottom: 2rpx solid gainsboro;
}

.header .browser {
    display: inline-block;
    vertical-align: middle;
    width: 20%;
    margin-right: 20rpx;
    color: grey;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.header .amount {
    display: inline-block;
    vertical-align: middle;
    width: 20%;
    margin-right: 20rpx;
    color: grey;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.header .concert {
    display: inline-block;
    vertical-align: bottom;
    width: 20%;
    float: right;
    text-align: center;
    padding: 10rpx 15rpx;
    background: #0767c8;
    border-radius: 5rpx;
    color: white;
}

.tip {
    padding: 20rpx 30rpx;
}

.tip .user {
    height: 80rpx;
    line-height: 80rpx;
}

.tip .user .username {
    font-size: 30rpx;
    color: dimgrey;
    font-weight: bold;
    height: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    vertical-align: top;
    margin-left: 30rpx;
}

.tip .user text {
    color: dimgray;
    font-size: 25rpx;
    font-weight: normal;
    display: inline-block;
}

.user image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.tip .interact>view {
    display: inline-block;
    color: grey;
    height: 80rpx;
    line-height: 80rpx;
}

.info image {
    height: 30rpx;
    width: 40rpx;
}

.suspend image {
    width: 100%;
    height: 100%;
    transform-origin: 50% 50%;
    transform: scale(0.6);
}

.writeboard {
    border-top: 3rpx solid #f4f4f4;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: white;
    padding: 20rpx;
    box-sizing: border-box;
    transition-property: height;
    transition-duration: 0.5s;
}
.writeboard .ball{
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    border-radius: 50%;
    background: #118cf4;
    box-shadow: 0 0 20rpx #118cf4;
}


.writeboard .input {
    background: #f4f4f4;
    border-radius: 30rpx;
}

.writeboard .input input {
    display: inline-block;
    width: 550rpx;
}

.writeboard image {
    margin: 10rpx 20rpx;
    width: 40rpx;
    height: 40rpx;
}

#addpic {
    width: 50rpx;
    height: 50rpx;
}

.tool image {
    width: 60rpx;
    height: 60rpx;
}

/*面板样式*/

.panel {
    height: 60rpx;
    width: 100%;
    bottom: 0;
    box-sizing: border-box;
}

.panel .praise {
    width: 120rpx;
    height: 60rpx;
    border-radius: 5rpx;
    background: rgb(7, 103, 200);
}

.panel image {
    width: 100%;
    height: 100%;
    display: block;
}

.collect image, .comment image {
    display: inline-block;
}

.close {
    display: none;
}

.panel>view {
    margin-left: 20rpx;
    vertical-align: top;
    display: inline-block;
    font-size: 20rpx;
    height: 60rpx;
}

.panel::after {
    content: "";
    display: block;
    clear: bothl;
}

.collect, .comment {
    float: right;
}

.collect image, .comment image {
    height: 40rpx;
    width: 40rpx;
    vertical-align: middle;
}

.collect text, .comment text {
    vertical-align: middle;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
}

.top image {
    width: 60rpx;
    height: 60rpx;
}

.user .time {
    float: right;
    position: relative;
    top: -20rpx;
}

.info image {
    margin-right: 10rpx;
}

.hide {
    display: none !important;
}

#copyright {
    text-align: center;
    margin: 10rpx 0;
}
