/* index.wxss */
@import "../../wxParse/wxParse.wxss";
page{

}
.nav{

}
.nav>view{
  display: inline-block;
  width: 33.33%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #f4f4f4;
  color: #454545;
}
.banner{
    height: 350rpx;
    overflow: hidden;
}
.banner image{
  height: 350rpx;
  display: block;
}
.sum{
  padding: 20rpx;
}
.top{
  margin-bottom:15rpx; 
}
.sum .bottom>view{
   height: 70rpx;
   line-height: 70rpx;
}
.bottom>view{
  display: inline-block;
}
.bottom .right{
  float: right;
  font-size: 35rpx;
  color: darkorange;
}

#mapbox{
  height: 400rpx;  
}
#myMap{
  width:100%;
  height: 400rpx;
}
.case{
  padding: 30rpx 30rpx;
}
.case .title{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  color: #0767C8;
}
.bechosen{
 border-top: 4rpx solid rgb(7,103,200);
 border-bottom:none !important;
 background: white !important;
}
.intro{
  padding: 0 30rpx 50rpx;
  background: white;
  margin-bottom: 20rpx;
  box-shadow:0 2rpx 5rpx #888888;
}
.intro>view:first-of-type{
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: black;
  vertical-align: top;
}
.content view,.content{
  color: black;
  font-size: 25rpx;
  line-height: 45rpx;
}
.course{
  padding: 0 20rpx;
}
.course>view{
  display: inline-block;
  width:33.33%;
  vertical-align: top;
  position: relative;
}
.course image{
  width: 220rpx;
  height: 150rpx;
  position: absolute;
  left: 50%;
  margin-left: -110rpx;
}
.course .title{
 clear:both;
 margin-top:150rpx;
 width: 98%;
 white-space: nowrap;
 overflow: hidden;
 text-overflow: ellipsis;
}
.course .price{
  color:darkorange;
}
.teacher{
  border-bottom:1rpx solid lightgrey;
  padding: 30rpx 30rpx ; 
}
.teacherprotrait image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.teacher>view{
  display: inline-block;
  vertical-align: top;
}
.teacher .box{
  margin-left: 20rpx;
  width:550rpx;
  white-space: pre-wrap;
  word-break: break-all;
  word-wrap: break-word;
}
.teacher .boxtop>view{
  display: inline-block;
  vertical-align: middle;
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
    color: dimgray;
}
.teacher .boxtop .name{
  font-size: 29rpx;
  color: black;
  font-weight: bold;
}
.teacher .boxtop .reputation{
  margin-left: 150rpx;
  
}
.reputation image{
  width: 25rpx;
  height: 25rpx;
}
.teacher .boxtop .amount{
  float:right;
  margin-top:12rpx; 
}
.teacher .bottom{
  color: black;
  line-height: 50rpx;
  font-size: 22rpx;
  overflow: hidden;
}
.comment{
  padding: 0rpx 30rpx;
  background: white;
}
.commentheader{
  border-bottom:1rpx solid lightgray;
}
.commentheader>view{
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
}
.commentheader .more{
  float: right;
  color: dimgrey;
  font-size: 25rpx;
}
.list{
  margin: 20rpx 0 0;
}
.list>view{
  display: inline-block;
  vertical-align: top;
}
.protrait image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  margin-right: 50rpx;
}
.list .box{
  width: 538rpx;
  border-bottom:1rpx solid lightgrey; 
}
.top>view{
  color:black;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: top;
}
.top .name{
  color: #0767C8;
}
.top .right{
  color: dimgrey;
  float: right;
}
.right>view{
    margin-left: 20rpx;
}
.top image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  transform: translateY(5rpx)
}
.right>view{
  display: inline-block;
  vertical-align:top;
}
.middle{
  height: 40rpx;
  line-height: 40rpx;
  color: dimgrey;
}
.bottom{
  margin-top:10rpx;
  font-size: 22rpx;
}
.banner .protrait{
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  left: 50%;
  margin-left: -90rpx;
  top: 60rpx;
  border:10rpx solid white;
  z-index: 99;
}
#cover{
  filter: brightness(0.5) blur(20rpx);
  position: relative;
  top: -180rpx;
  height: 750rpx;
  width: 120%;
  left: -10%;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
}
.footer>view{
  display: inline-block;
  width: 50%;
  padding: 30rpx 0;
  font-size: 30rpx;
  z-index: 999;
  text-align: center;
}
.footer .address{
  color: #0767C8;
  border: 2rpx solid #f4f4f4;
  box-sizing: border-box;
}
.footer .dail{
  background: #0767C8;
  color: white;
}
.describe{
  padding: 20rpx 25rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-indent: 2em;
}
.organisename{
  margin-top: 20rpx;
  font-size: 35rpx;
  text-align: center;
  color: white;
  width: 750rpx;
  margin-left: -285rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
#copyright{
    text-align: center;
    margin:10rpx 0;
}
/* 相册 */
.ablum .listbox{
    display: inline-block;
    vertical-align: top;
    width: 33.33%;
    height: 230rpx;
    padding: 0 5rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}
.ablum .listbox .list{
   width: 100%;
   height: 100%;
}
.ablum .listbox image{
    width: 100%;
    height: 100%;
}
/* 隐藏 */
.hidden>view{
    width: 50% !important;
}