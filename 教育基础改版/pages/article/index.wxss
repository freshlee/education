/* index.wxss */
@import "../../wxParse/wxParse.wxss";
.body{
  box-sizing: border-box;
  width: 100%;
  position: relative;
  background: #f4f4f4;
}
.header>.list{
  display: inline-block;
  height: 170rpx;
  padding: 20rpx 20rpx 20rpx 0rpx;
  vertical-align: top;
}
.header{
  padding-bottom:20rpx;
}
.info .name{
  position: relative;
  font-size: 30rpx;
  font-weight: bold;
  width: 410rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp:2;
overflow: hidden;
}
.info .li{
  font-size: 25rpx;
  color: grey;
  margin: 5rpx 0;
}
.info .price{
  color: red;
  font-size: 30rpx;
}
.panel{
  padding-bottom: 60rpx;
  font-weight: bold;
}
.panel>view{
   display: inline-block;
   width:48%; 
   text-align: center;
   font-size: 45rpx;
  padding: 15rpx 0;
}
.panel>.purchase{
    background: rgb(7,103,200);
    color: white;
    border-radius: 5rpx;
    font-weight: lighter;
    font-size: 30rpx;
}
.panel .try{
   margin-left:20rpx;  
   border: 1rpx solid rgb(7,103,200);
   color: rgb(7,103,200);
    border-radius: 5rpx;
    font-weight: lighter;
    font-size: 30rpx;
}


.operate>view{
  display: inline-block;
  width: 48%;
  text-align: center;
  font-size:30rpx;
  padding:30rpx 0;
  color: grey;
}
.operate>.collect{
  margin-left:20rpx;
}
.operate image{
  width: 50rpx;
  height: 50rpx;
}



 .title{
  font-size: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.title_case{
  padding:20rpx 0;
  border-bottom:1rpx solid gainsboro;
}
.title_case .list{
  display: inline-block;
  width:50%;
  vertical-align: middle;
}
.title_case .info{
  height: 190rpx;
  line-height: 37.5rpx;
  padding-left:20rpx;
}
.title_case image{
  height: 180rpx;
}
.title_case .priceattr{
  line-height: 75rpx;
  height: 75rpx;
  font-size:35rpx;
  color:green;
}




.recomand view{
    white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

.case{
  padding:0 30rpx;
  margin-bottom: 20rpx;
  background-color:white;
}
.case:last-of-type{
  margin: 0;
  box-shadow: none;
}
.content{
   font-size:30rpx;
   text-indent: 2em;
   padding:30rpx 60rpx;
}
.section view{
   text-align: center;
   font-size:35rpx;
}
.free view{
  width: 100%;
  background: red;
  position: fixed;
  bottom: 0;
  text-align: center;
  padding: 0 20rpx;
  height: 150rpx;
  line-height: 150rpx;
  background: orangered;
  box-sizing: border-box;
  font-size: 40rpx;
  font-weight: bold;
}
/*评论样式*/
.protrait{
  margin-top:10rpx;
}
.comment{
  padding: 0rpx 30rpx;
  background: white;
}
.commentheader{
  border-bottom:1rpx solid lightgray;
}
.commentheader>view{
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
}
.commentheader .more{
  float: right;
  color: dimgrey;
  font-size: 25rpx;
}
.comment .list{
  margin: 20rpx 0 0;
}
.comment .list>view{
  display: inline-block;
  vertical-align: top;
}
.comment .protrait image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 50rpx;
}
.comment .list .box{
  width: 538rpx;
  border-bottom:1rpx solid lightgrey; 
}
.comment .top>view{
  color:black;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: top;
}
.comment .top .name{
  color: #0767C8;
}
.comment .top .right{
  color: dimgrey;
  float: right;
}
.comment .right>view{
    margin-left: 20rpx;
}
.comment .top image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
  transform: translateY(5rpx)
}
.comment .right>view{
  display: inline-block;
  vertical-align:top;
}
.comment .middle{
  height: 40rpx;
  line-height: 40rpx;
  color: dimgrey;
}
.comment .bottom{
  padding:15rpx 0 ;
  font-size: 22rpx;
}
#copyright{
    text-align: center;
    margin:10rpx 0;
}