/* index.wxss */
view{
    color: #454545 !important;
    font-size: 28rpx !important;
}
text{
    color: #454545 !important;
    font-size: 28rpx !important;
}
page{
    padding: 25rpx;
    box-sizing: border-box;
    background: #f4f4f4;
}
.model{
    padding:0 30rpx 20rpx;
    background: white;
    margin-bottom: 20rpx;
}
.model .up,.model .down{
    text-align: center;
}
.model .up{
    line-height: 70rpx;
    font-size: 40rpx;
}
.model .down{
    font-size: 30rpx;
    line-height: 40rpx;
    color: #adadad;
}
/* 第一部分 */
.case {
    background: white;
    padding: 0 30rpx;
    border-bottom: 2rpx solid #f4f4f4;
}

.case .list {
    height: 110rpx;
    line-height: 110rpx;
    border-bottom: 2rpx solid #f4f4f4;
    border-top: 2rpx solid #f4f4f4;
    font-size: 30rpx;
}

.case .list:last-of-type {
    border-bottom: none;
}

.case .logo {
    width: 50rpx;
    height: 50rpx;
    transform: translateY(10rpx);
}

.rightside {
    float: right;
    height: 110rpx;
    color: dimgray;
}

.rightside image {
    width: 40rpx;
    height: 30rpx;
    transform: rotate(-90deg);
}

.rightside input {
    display: inline-block;
    height: 110rpx;
    line-height: 110rpx;
    vertical-align: top;
    width: 500rpx;
    text-align: right;
    margin-right: 10rpx;
}

.rightside text {
    vertical-align: top;
    display: inline-block;
    height: 110rpx;
    line-height: 110rpx;
}

.go {
    margin-top: 200rpx;
    background: rgba(250, 128, 10, 1);
    color: white;
    border-radius: 0;
    width: 90%;
}
/* 第二部分 */
.area{
    box-sizing: border-box;
}
.area .title{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    text-indent: 20rpx;
    color: #adadad;
}
.area textarea{
    background: white;
    width: 100%;
    height: 200rpx;
    padding: 30rpx;
    box-sizing: border-box;
}
.area .rest{
    background: white;
    text-align: right; 
    height: 60rpx;
    padding: 0 30rpx;
    color: #adadad;
    font-size: 30rpx;
}
/* 第三部分 */
.cate{
    background: white;
    margin:20rpx 0;
}
.cate .title{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    text-indent: 20rpx;
    color: #adadad;
    background: #f4f4f4;
}
.cate .list{
    display: inline-block;
    vertical-align: top;
    width: 33.33%;
    box-sizing: border-box; 
    text-align: left;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    padding-left: 20rpx;
    font-size: 30rpx;
}
.go {
    margin-top: 100rpx;
    background:#0767C8;
    color: white;
    border-radius: 0;
    width: 90%;
}