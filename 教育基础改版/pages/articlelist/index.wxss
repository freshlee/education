/* 文章列表样式 */

.news {
    background: white;
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.news .case {
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f4f4f4;
    white-space: nowrap;
}

.news .case>view {
    display: inline-block;
    vertical-align: middle;
}

.news .case .pic {
    width: 254rpx;
    height: 177rpx;
}

.news .case .pic image {
    width: 100%;
    height: 100%;
}

.news .case .detail {
    width: 405rpx;
    margin-left: 30rpx;
    position: relative;
    height: 177rpx;
    white-space: normal;
}

.news .case .detail .up {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 30rpx;
    line-height: 50rpx;
}
.news .case .detail .middle {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 25rpx;
    color: #adadad;
}

.news .case .detail .bottom {
    margin-top: 10rpx;
    position: absolute;
    bottom: 0;
    width: 100%;
}

.news .case .detail .bottom>view {
    display: inline-block;
    width: 50%;
    font-size: 27rpx;
    color: #adadad;
}

.news .case .detail .bottom>view:last-of-type {
    text-align: right;
}
